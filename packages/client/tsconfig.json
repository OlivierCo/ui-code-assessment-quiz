{
  "extends": "../../tsconfig.common.json",
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "rootDir": "src",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "target": "es2019",
    "module": "commonjs",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "jsx": "react"
  }
}
